<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#f2f7f4"
    android:layout_gravity="center"
    tools:context=".OTPActivity">
    <ImageView
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/phoneLabel"
        android:text="verify +254707676913"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="normal"
        android:textColor="#2d45ca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Enter the OTP code to verify your phone number"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="#cecece"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:itemBackground="#000"
                android:focusableInTouchMode="true"
                app:OtpItemCount="6"
                app:OtpLineColor="#fff"
                app:OtpViewType="line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/continueBtn"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:backgroundTint="#F137E606"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_Continue_btn" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>